generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id            Int               @id @default(autoincrement())
  name          String
  creditBalance Float             @default(0) 
  commissions   CommissionRange[] 
  vouchers      Voucher[]
}

model CommissionRange {
  id         Int    @id @default(autoincrement())
  minDays    Int    
  maxDays    Int?   
  percentage Float  
  clientId   Int
  client     Client @relation(fields: [clientId], references: [id])
}

model Voucher {
  id          Int       @id @default(autoincrement())
  totalAmount Float     
  balance     Float     
  createdAt   DateTime  @default(now()) 
  paymentDate DateTime  
  status      String    @default("ACTIVO") 
  clientId    Int
  client      Client    @relation(fields: [clientId], references: [id])
  payments    Payment[]
}

model Payment {
  id        Int      @id @default(autoincrement())
  amount    Float    
  createdAt DateTime @default(now())
  voucherId Int
  voucher   Voucher  @relation(fields: [voucherId], references: [id])
}